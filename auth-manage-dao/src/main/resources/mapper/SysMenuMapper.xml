    <select id="hasChildByMenuId" parameterType="java.lang.Long" resultType="java.lang.Integer">
        select count(1) from sys_menu where parent_id = #{menuId}
    </select>

    <select id="selectSysMenuTreeByAppId" parameterType="java.lang.Long" resultMap="SysMenuResult">
        select distinct m.id, m.app_id as appId, m.parent_id as parentId, m.menu_name as menuName, m.path, m.component,
        m.query, m.visible, m.status, m.menu_type as menuType, m.icon, m.order_num as orderNum, m.create_time as
        createTime
        from sys_menu m where m.status = 0 and m.app_id = #{appId}
        order by m.parent_id, m.order_num
    </select>
